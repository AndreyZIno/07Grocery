<!-- res/layout/item_store.xml -->
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="184dp"
        android:layout_height="113dp"
        android:background="@drawable/product_tile_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="15dp"
        android:paddingHorizontal="15dp">


        <ImageView
            android:id="@+id/imageViewStoreLogo"
            android:layout_width="60dp"
            android:layout_height="84dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_corner_imageview"
            android:clipToOutline="true"
            android:src="@drawable/sample" />


        <!-- Center line separator -->
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="12dp"
            android:background="@color/turquoise" />

        <!-- Right-side store name -->
        <TextView
            android:id="@+id/textViewProductName"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="15sp"
            android:textColor="@color/light_gray"
            android:fontFamily="@font/red_hat_display"/>

    </LinearLayout>

</RelativeLayout>


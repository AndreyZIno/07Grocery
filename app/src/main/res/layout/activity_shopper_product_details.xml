<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vector1_background"
    android:paddingHorizontal="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/buttonBackToProducts"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="Back to Products"
            android:textColor="@color/navy_blue"
            android:textSize="11sp"
            android:fontFamily="@font/red_hat_display"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="@color/secondary_gray"
            android:background="@drawable/rounded_button"
            android:clipToOutline="true"/>

    <include
        layout="@layout/item_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="25dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonAddToCart">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageViewProduct"
                android:layout_width="280dp"
                android:layout_height="383dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:background="@drawable/rounded_corner_productview"
                android:clipToOutline="true"
                android:adjustViewBounds="true"
                android:layout_gravity="center"
                android:src="@drawable/sample"
               />

            <TextView
                android:id="@+id/textViewProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/light_gray"
                android:fontFamily="@font/red_hat_display"
                android:paddingTop="20dp" />

            <TextView
                android:id="@+id/textViewBrandName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textColor="@color/gray"
                android:fontFamily="@font/red_hat_display"
                android:paddingBottom="20dp"/>

            <TextView
                android:id="@+id/textViewProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textColor="@color/light_gray"
                android:fontFamily="@font/red_hat_display"/>

            <TextView
                android:id="@+id/textViewProductDescription"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textColor="@color/gray"
                android:textAlignment="center"
                android:fontFamily="@font/red_hat_display"/>

        </LinearLayout>


    </ScrollView>

    </LinearLayout>

    <ImageButton
        android:id="@+id/buttonAddToCart"
        android:layout_width="250dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:text="Add to Cart"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/navy_blue"
        android:clipToOutline="true"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_button"
        android:src="@drawable/add_to_cart"
        />



</RelativeLayout>

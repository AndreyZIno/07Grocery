<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.example.shopeaze.WelcomeScreen"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_welcome">

        <action
            android:id="@+id/action_FirstFragment_to_ShopperFragment"
            app:destination="@id/FragmentStoreList" />

        <action
            android:id="@+id/action_FirstFragment_to_OwnerFragment"
            app:destination="@id/OwnerFragment" />
    </fragment>

    <fragment
        android:id="@+id/SecondFragment"
        android:name="com.example.shopeaze.SecondFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/FirstFragment" />
    </fragment>

    <fragment
        android:id="@+id/FragmentStoreList"
        android:name="com.example.shopeaze.FragmentStoreList"
        android:label="Stores"
        tools:layout="@layout/activity_store_list" />

    <fragment
        android:id="@+id/FragmentMyCart"
        android:name="com.example.shopeaze.FragmentMyCart"
        android:label="My Cart"
        tools:layout="@layout/activity_cart" />


